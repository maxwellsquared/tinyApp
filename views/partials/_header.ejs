<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c9/Tony_Bennett_National_Italian_American_Gala.jpg/440px-Tony_Bennett_National_Italian_American_Gala.jpg" style="width:50px">
    <a class="navbar-brand" href="/urls">TonyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (username === undefined) { %>
        <form class="form-inline" action="/login" method="POST">
          <div class="form-group mb-2">

            <label for="username">Username:</label>
            <input
              type="text"
              name="username"
              style="width: 200px; margin: 1em"
            />
            <button type="submit" class="btn btn-primary">Log In</button>
           
          </div>
        </form>
        <% } %>
        <% if (username !== undefined) { %>
          <form class="form-inline" action="/logout" method="POST">
            <div class="form-group mb-2">
  
              <p><%= username %></p>
              <button type="submit" class="btn btn-primary">Log Out</button>
             
            </div>
          </form>
          <% } %>
      </div>
    </div>
  </nav>
 
</header>