<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c9/Tony_Bennett_National_Italian_American_Gala.jpg/440px-Tony_Bennett_National_Italian_American_Gala.jpg" style="width:50px">
    <a class="navbar-brand" href="/urls">TonyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (!user) { %>
          <button type="submit" class="btn btn-primary"><a href="/login" color="white" style="color:white"><b>Log In</b></a></button>
          <a class="nav-item nav-link" href="/register">Register</a>
        <% } %>
        <% if (user && user.email !== undefined) { %>
          <form class="form-inline" action="/logout" method="POST">
            <div class="form-group mb-2">
  
              <p>Logged In As: <%= user.email %></p>
              <button type="submit" class="btn btn-primary">Log Out</button>
             
            </div>
          </form>
          <% } %>
      </div>
    </div>
  </nav>
 
</header>